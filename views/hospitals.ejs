<!doctype html>
<html lang="en">


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Hospitals</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <link rel="stylesheet" href="/css/style.css">




    <style>
        body {
            background-image: linear-gradient(rgba(29, 212, 212, 0.664), rgba(0, 0, 0, 0.7)), url("/css/img/1.jpg"), url(img/1.jpg);

            background-size: cover;
        }

        body {
            background: rgb(247, 247, 247);
        }

        hr {
            background: rgb(228, 65, 36)
        }

        .contact-form {
            background: rgb(242, 244, 245);
            color: black;
            margin-top: 20px;

            padding: 100px;

            box-shadow: 0px 0px 10px 3px rgba(66, 64, 64, 0.267);
        }
    </style>




</head>

<body>
    <% include partials/supernav %>

    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->

    <div class="dashboard-wrapper">
        <div class="container-fluid  dashboard-content">

            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">All Hospitals </h2>
                        <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit
                            amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">

                                </ol>
                            </nav>
                        </div>
                        <div class="page-breadcrumb">
                            <nav aria-label="breadcrumb">

                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end   pageheader -->
            <!-- ============================================================== -->

            <!-- ============================================================== -->
            <!-- table -->
            <!-- ============================================================== -->


            <!-- ============================================================== -->
            <!-- basic table  -->
            <!-- ============================================================== -->
            <table class="table table-striped table-bordered first">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Option</th>
                        <th>Activate</th>
                        <th>Deactivate</th>
                    </tr>
                </thead>
                <% for(let i = 0; i < posts.length; i++) { %>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                        <div class="table-responsive">


                            <tbody>
                                <tr>
                                    <td><%= posts[i].title %></td>
                                    <td><%= posts[i].email %></td>
                                    <td><%= posts[i].address %></td>
                                    <td><%= posts[i].phone %></td>
                                    <td><%= posts[i].status %></td>


                                    <form method="POST" action="/superadmin/<%= posts[i]._id %>?_method=DELETE">
                                        <td><button type="submit" class="btn btn-outline-primary" onclick="return confirm('Are you sure you want to delete this Hospital You Cant Undo this after Delete?')"
                                                onclick="spjs.contentApproval.toggleApprovelStatus(0);return false;">Delete</button>
                                    </form>
                                    <form method="POST" action="/superadmin/activate/<%= posts[i]._id %>?_method=PUT">
                                        <td><button type="submit" class="btn btn-outline-primary"
                                                onclick="spjs.contentApproval.toggleApprovelStatus(0);return false;">Activate</button>
                                    </form>
                                    <form method="POST" action="/superadmin/deactivate/<%= posts[i]._id %>?_method=PUT">
                                        <td><button type="submit" class="btn btn-outline-primary"
                                                onclick="spjs.contentApproval.toggleApprovelStatus(0);return false;">Deactivate</button>
                                    </form>
                                </tr>
                            </tbody>

                        </div>
                    </div>
                </div>

                <% } %>
            </table>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end left sidebar -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->

    <script src="/vendors/js/jquery-3.3.1.min.js"></script>
    <script src="/vendors/css/bootstrap.bundle.js"></script>
    <script src="/vendors/js/jquery.slimscroll.js"></script>
    <script src="/vendors/js/main-js.js"></script>

</body>

</html>