            <div class="container">
                    <div class="row">
                            <% for(let i = 0; i < posts.length; i++) { %>
                            <div class="col-sm-6">
                              <div class="card">
                                <div class="card-body">
                                  <h5 class="card-title"><%= posts[i].name %></h5>
                                  <p class="card-text"><%= posts[i].description %></p>
                                  <form method="POST" action="/department/<%= posts[i]._id %>?_method=DELETE">                                 
                                    <td><button type="submit" onclick="return confirm('Are you sure you want to delete this Department?');" class="btn btn-outline-primary" onclick="spjs.contentApproval.toggleApprovelStatus(0);return false;">Delete</button>
