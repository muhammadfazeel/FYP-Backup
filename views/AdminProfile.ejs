<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Edit</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <link rel="stylesheet" href="/css/style.css" />

    <style>
      body {
        background-image: linear-gradient(
            rgba(29, 212, 212, 0.664),
            rgba(0, 0, 0, 0.7)
          ),
          url("css/img/1.jpg"), url(img/1.jpg);

        background-size: cover;
      }

      body {
        background: rgb(38, 202, 231);
      }

      hr {
        background: rgb(228, 65, 36);
      }

      .contact-form {
        background: rgb(242, 244, 245);
        color: black;
        margin-top: 20px;

        padding: 100px;

        box-shadow: 0px 0px 10px 3px rgba(66, 64, 64, 0.267);
      }

      .hidden {
        display: none;
      }

      .hidden2 {
        display: none;
      }
    </style>
    <script>
      function showHide() {
        var checkbox = document.getElementById("chk");
        var hiddeninputs = document.getElementsByClassName("hidden");
        for (var i = 0; i != hiddeninputs.length; i++) {
          if (checkbox.checked) {
            hiddeninputs[i].style.display = "block";
          } else {
            hiddeninputs[i].style.display = "none";
          }
        }
      }

      function showHidee() {
        var checkbox = document.getElementById("chkk");
        var hiddeninputs = document.getElementsByClassName("hidden2");
        for (var i = 0; i != hiddeninputs.length; i++) {
          if (checkbox.checked) {
            hiddeninputs[i].style.display = "block";
          } else {
            hiddeninputs[i].style.display = "none";
          }
        }
      }
    </script>
  </head>

  <body>
    <% include partials/adminnav %>
    <!-- ============================================================== -->
    <!-- wrapper  -->
    <!-- ============================================================== -->
    <div class="dashboard-wrapper">
      
      <div class="container-fluid  dashboard-content">
          <div class="page-breadcrumb">
              <nav aria-label="breadcrumb">
                      <td><a href="/doctor/addSchedule" class="btn btn-danger btn-rounded btn-sm my-0">Add Schedule</a></td> 
              </nav>
        <div class="container contact-form">
                
          <h1>Edit Profile</h1>
          <hr />
          <form id="UpdateAdmin">
            <div class="row">
              <div class="col-md-10">
                <div class="col-md-8">
                    <div class="form-group">
                        <label hidden>Id</label>
                        <Input type="text"   name="name" id="id" hidden value="<%= posts._id %>"
                          class="form-control" />
                      </div>
                      <div class="form-group">
                          <label hidden>UserID</label>
                          <Input type="text"  name="name" hidden id="userid" value="<%= posts.hid %>"
                            class="form-control" />
                        </div>  
                  <div class="form-group">
                    <label>Name</label>
                    <Input
                      type="text"
                      name="title"
                      id="nameid"
                      value="<%= posts.name %>"
                      class="form-control"
                    />
                  </div>

                  <div class="form-group">
                    <label>Email</label>
                    <Input
                      type="email"
                      name="email"
                      id="emailid"
                      value="<%= posts.email %>"
                      class="form-control"
                      pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$"
                      required
                    />
                  </div>
                  <div>
                    <label>Password</label>
                    <Input
                      type="password"
                      name="password"
                      id="passwordid"
                      placeholder="Must Enter Your Old/New Password" required
                      class="form-control"
                    />
                  </div>
                  <div class="form-group">
                    <label>Phone</label>
                    <Input
                      type="tel"
                      name="phone"
                      id="phoneid"
                      value="<%= posts.phone %>"
                      class="form-control"
                      placeholder="03XX-XXXXXXX"
                      pattern="^\d{4}-\d{7}$" required
                    />
                  </div>

                  <div class="form-group">
                                                         
                            <button type="submit" class="btn-danger btn-rounded btn-sm my-0 " onclick="spjs.contentApproval.toggleApprovelStatus(0);return false;">Update</button>
                            
                  </div>
                  <br />
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- Optional JavaScript -->
    <script rel="javascript" type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script rel="javascript" type="text/javascript" src="/main.js"></script>

  </body>
</html>
