<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Form Validation</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <link rel="stylesheet" href="/css/style.css" />

    <style>
      body {
        background-image: linear-gradient(
            rgba(29, 212, 212, 0.664),
            rgba(0, 0, 0, 0.7)
          ),
          url("css/img/1.jpg"), url(img/1.jpg);

        background-size: cover;
      }
      body {
        background: rgb(38, 202, 231);
      }
      hr {
        background: rgb(228, 65, 36);
      }
      .contact-form {
        background: rgb(242, 244, 245);
        color: black;
        margin-top: 20px;

        padding: 100px;

        box-shadow: 0px 0px 10px 3px rgba(66, 64, 64, 0.267);
      }
      .hidden {
        display: none;
      }
      .hidden2 {
        display: none;
      }
    </style>
    <script>
      function showHide() {
        var checkbox = document.getElementById("chk");
        var hiddeninputs = document.getElementsByClassName("hidden");
        for (var i = 0; i != hiddeninputs.length; i++) {
          if (checkbox.checked) {
            hiddeninputs[i].style.display = "block";
          } else {
            hiddeninputs[i].style.display = "none";
          }
        }
      }

      function showHidee() {
        var checkbox = document.getElementById("chkk");
        var hiddeninputs = document.getElementsByClassName("hidden2");
        for (var i = 0; i != hiddeninputs.length; i++) {
          if (checkbox.checked) {
            hiddeninputs[i].style.display = "block";
          } else {
            hiddeninputs[i].style.display = "none";
          }
        }
      }
    </script>
  </head>

  <body>
    <% include partials/adminnav %>
    <div class="dashboard-wrapper">
      <div class="container-fluid  dashboard-content">
        <div class="container contact-form">
          <h1>Book Appointment</h1>
          <hr />
          <div class="row">
            <div class="col-md-10">
              <div class="col-md-8">
                <input
                  type="checkbox"
                  name="chkbox2"
                  id="chkk"
                  onclick="showHidee()"
                />
                <label for="chk">Select Patient</label>
                <br/>
                <div class="hidden2">
                  <label> Select Patient</label>
                  <select name="select" class="form-control">
                    <% for(var i=0; i < posts.length; i++) { %>
                        <option><%= posts[i].email %></option>
                    <% } %>
                </select>     
                </div>
                <input
                  type="checkbox"
                  name="chkbox"
                  id="chk"
                  onclick="showHide()"
                />
                <label for="chk">Add New Patient</label>
                <div class="hidden">
                  <div class="form-group">
                    <label>patient name</label>
                    <Input type="text" name="title" class="form-control" />
                  </div>

                  <div class="form-group">
                    <label>patient phone</label>
                    <Input type="tel" name="phone" class="form-control" />
                  </div>
                  <div class="form-group">
                    <label>patient Adress</label>
                    <Input type="text" name="adress" class="form-control" />
                  </div>
                </div>
                <div> 
                
                </div>
                <div>
                  <label> Doctors</label>
                  
                  <select name="language" class="form-control">
                        <% for(var i=0; i < posts.length; i++) { %>
                            <option><%= Posts[i].name %></option>
                        <% } %>
                  </select>
                
                </div>
                <div class="form-group">
                  <label>Date</label>
                  <input type="date" name="bday" class="form-control" />
                </div>

                <div>
                  <label> Appoinment status</label>
                  <select name="language" class="form-control">
                    <option value="friends" selected>confirmed</option>
                    <option value="search">pending</option>
                  </select>
                  <br />
                  <div class="form-group">
                    <button class="btn btn-primary btn-block">Send</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
